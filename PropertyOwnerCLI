
import java.io.IOException;
import java.util.Scanner;


public class CLI {
    private Scanner in;
    private String command;

    public CLI() {
        in = new Scanner(System.in);
    }

    public void run()
            throws IOException
    {
        boolean more = true;

        while (more) {
            System.out.println("Property Owner Name: ");
            String name = in.nextLine();
            PropertyOwner p = new PropertyOwner(name);
            System.out.println("R)egister property, S)how properties, P)ay Tax, V)iew Payments");
            command = in.nextLine().toUpperCase();
            if (command.equals("R"))
            {
                System.out.println("Enter Address: ");
                String address = in.nextLine();
                System.out.println("Enter Eircode: ");
                String eir = in.nextLine();
                System.out.println("Enter location (City, Large Town, Small Town, Village, Countryside): ");
                String location = in.nextLine();
                System.out.println("Enter market value: ");
                double mVal = in.nextDouble();
                System.out.println("Private Residence? true/false: ");
                boolean priv = in.nextBoolean();
                p.registerProperty(address, eir, location, mVal, priv);

            }  else if (command.equals("S")) {
               System.out.println( p.viewProperties());
                
                
            } else if (command.equals("P")) {
            	
            	System.out.println("Enter the details of the Property which tax you want to pay");
            	 System.out.println("Enter Address: ");
                 String address = in.nextLine();
                 System.out.println("Enter Eircode: ");
                 String eir = in.nextLine();
                 System.out.println("Enter location (City, Large Town, Small Town, Village, Countryside): ");
                 String location = in.nextLine();
                 System.out.println("Enter market value: ");
                 double mVal = in.nextDouble();
                 System.out.println("Private Residence? true/false: ");
                 boolean priv = in.nextBoolean();
            	
                 Property prop = new Property(name, address, eir, location, mVal, priv);
            	System.out.println("Enter year of Tax to be paid: ");
            	int year = in.nextInt();
            
            	p.makePayment(prop, year);
            } else if (command.equals("V")) {
            	// insert payments made here //
            }
            
            
            
        }

    }
}
